{
    "tasks": [
        {
            "label": "ReleaseBuild",
            "type": "shell",
            "command": "cmake --build build --config Release",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "ReleaseWindeployqt",
            "type": "shell",
            "command": "windeployqt .\\build\\Release\\CUITExamClient.exe",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "ReleaseBuild"
        },
        {
            "label": "preparePacking",
            "type": "shell",
            "command": [
                "Remove-Item -Path \"output\" -Recurse -Force \n",
                "mkdir output \n",
                "xcopy QtIFW output /s /e /y /i \n",
                "xcopy build\\Release output\\packages\\Client\\data /s /e /y /i"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "ReleaseWindeployqt"
        }
    ],
    "version": "2.0.0"
}